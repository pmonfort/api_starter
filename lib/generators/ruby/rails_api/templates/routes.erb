Rails.application.routes.draw do
<% resources.each do |resource| %>
<%   if resource['actions'].sort == %w[create destroy index show update].sort %>
  <%= "resources :#{resource['name'].downcase.pluralize}" %>
<%   else %>
  <%= "resources :#{resource['name'].downcase.pluralize}, only: %i[#{resource['actions'].join(' ') }]" %>
<%   end %>
<% end %>
  # For details on the DSL available within this file, see https://guides.rubyonrails.org/routing.html
end
